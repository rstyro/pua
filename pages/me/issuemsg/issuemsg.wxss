.container{
  width: 100%;
  height: 100%;
}
.container .title{
  text-align: center;
  font-weight: 600rpx;
  margin: 20px auto;
  display: block;
}
textarea{
  width: 95%;
  min-height: 500rpx;
  border: 1px solid #ccc;
  margin: 10rpx auto;
  padding: 10rpx;
}
.line{
  display: flex;
  align-items: center;
}
.line text{
  margin: 10rpx;
  background: #ccc;
  color: #fff;
  padding:10rpx 20rpx;
}
.line input{
  border-bottom: 1px solid #ccc;
  margin: 10rpx;
  padding-left: 5rpx;
  padding-top: 10rpx;
}

button{
  margin:20rpx 10rpx;
}