.msg-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #efeff1;
}
.title{
  text-align: center;
  display: block;
  padding: 20rpx;
}
.list{
  position: relative;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #ccc;

}
.list:first-child{
  border-top: 1px solid #ccc;
}
.list .content{
  width: 100%;
  position: absolute;
  z-index: 3;
  height: 120rpx;
  color: #111;
  background: #fff;
  transition: left 0.2s ease-in-out;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.list .content image{
  width: 50rpx;
  margin: 30rpx 20rpx 0rpx 20rpx;
  display: inline-block;
}


.list .operate{
  position: absolute;
  z-index: 2;
  width: 50%;
  height: 100%;
  right: 0rpx;
  background: #fff;
  text-align: center;
}
.list .operate .read{
  width: 65%;
  background: #ccc;
  color: #fff;
  display: inline-block
}
.list .operate .del{
  width: 35%;
  background: red;
  color: #fff;
  display: inline-block
}
